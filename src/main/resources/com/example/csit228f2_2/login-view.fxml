<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.csit228f2_2.HelloController">

    <children>
        <VBox layoutX="-2.0" layoutY="14.0" prefHeight="372.0" prefWidth="600.0">
            <children>
                <HBox alignment="CENTER" prefHeight="38.0" prefWidth="600.0">
                    <children>
                        <Label text="Charuzu's Library Hub">
                            <font>
                                <Font size="34" />
                            </font></Label>
                    </children>
               <VBox.margin>
                  <Insets left="20.0" />
               </VBox.margin>
                </HBox>
                <HBox alignment="CENTER" prefHeight="38.0" prefWidth="600.0">
                    <children>
                        <Label text="LOGIN">
                            <font>
                                <Font size="22" />
                            </font></Label>
                    </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
                </HBox>
                <HBox alignment="CENTER" prefHeight="59.0" prefWidth="600.0">
                    <children>
                        <Label text="Username : " />
                        <TextField fx:id="user" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="59.0" prefWidth="600.0">
                    <children>
                        <Label text="Password: " />
                        <PasswordField fx:id="pass" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="48.0" prefWidth="600.0">
                    <children>
                        <Button fx:id="loginButton" mnemonicParsing="false" text="Login" onAction="#loginButtonClick" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="45.0" prefWidth="600.0">
                    <children>
                        <Label text="Don't have an account yet? " />
                        <Button fx:id="regButton" mnemonicParsing="false" text="Register Here" onAction="#registerButtonClick"/>
                    </children>
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>

</AnchorPane>
